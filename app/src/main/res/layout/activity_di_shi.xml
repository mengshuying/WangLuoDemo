<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.wangluodemo.DiShiActivity">
    <RelativeLayout
        android:id="@+id/pass_title"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:text="找回密码"/>
        <ImageView
            android:id="@+id/back_pawTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_discover_normal"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_below="@id/pass_title"
        android:background="#555555"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/textView10">
    </View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已向手机"
        android:textSize="15sp"
        android:layout_alignTop="@+id/phone_num"
        android:layout_toStartOf="@+id/phone_num"
        android:id="@+id/textView12"/>
    <TextView

        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="***********"
        android:textSize="15sp"
        android:textColor="#FF0000"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:id="@+id/phone_num"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送验证码"
        android:textSize="15sp"
        android:layout_alignTop="@+id/phone_num"
        android:layout_toEndOf="@+id/phone_num"/>
    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/cellphoneicon_login_profile_normal"
        android:layout_below="@+id/phone_num"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"/>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/code_re"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_tip_code"
            android:id="@+id/code_image"
            />
        <EditText
            android:layout_centerVertical="true"
            android:id="@+id/code_edit"
            android:hint="请输入验证码"
            android:maxLines="1"
            android:inputType="number"
            android:textSize="15sp"
            android:background="@null"
            android:layout_toRightOf="@id/code_image"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/dishi_textview"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新发送 60"
            android:textSize="15sp"
            android:padding="2dp"
            android:layout_toEndOf="@+id/code_edit"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="#555555"
        android:layout_width="220dp"
        android:layout_height="1dp"
        android:id="@+id/textView15"
        android:layout_below="@+id/code_re"
        android:layout_centerHorizontal="true"
        >
    </View>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/jaja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true">
        <EditText
            android:maxLines="1"
            android:background="@null"
            android:layout_centerVertical="true"
            android:id="@+id/newpaw_edit"
            android:hint="请输入新密码（6-20位英文或数字）"
            android:layout_width="250dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/paw_tip"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_tip_pwd"
            android:id="@+id/paw_tip"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/dishi_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="          登录          "
        android:layout_marginTop="28dp"
        android:layout_below="@+id/jaja"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
