<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
      <TextView
         android:padding="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="ff"
          android:id="@+id/title1_textview1"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
          <ImageView
              android:padding="2dp"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:src="@mipmap/ic_launcher"
              android:id="@+id/title1_imageview1"
              />
          <ImageView
              android:padding="2dp"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:src="@mipmap/ic_launcher"
              android:id="@+id/title1_imageview2"
              />
          <ImageView
              android:padding="2dp"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:src="@mipmap/ic_launcher"
              android:id="@+id/title1_imageview3"
              />
      </LinearLayout>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/title1_textview2"
          android:text="ff"
          android:padding="5dp"
          />
  </LinearLayout>

</RelativeLayout>
